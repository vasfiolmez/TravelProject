@model TravelProject.Models.Destination
<div class="more-about">
    <div class="container">


        <div class="row">
            <div class="col-lg-4 align-self-center">
                <div class="col-lg-6">
                    <div class="side-bar-map">
                       
                        
                            <div class="row">
                                <div class="col-lg-12">
                                    
                                    <h6>Tur Başlangıç Lokasyonu</h6>                                    
                                    <br />
                                    <div id="map">
                                        <iframe src="@Model.TourStartMapLocation" allowfullscreen="" width="175%" height="550px" frameborder="0" style="border:0; border-radius: 23px; " allowfullscreen=""></iframe>

                                    </div>
                                </div>
                            </div>
                        
                    </div>
                </div>
            </div>
         
                <div class="col-lg-8">
                    <div class="section-heading">
                        <h2>@Model.Title</h2>
                        <p>@Model.Description</p>
                    </div>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="info-item">
                                <h4>@Model.DayNight Gün @(Model.DayNight-1) Gece</h4>
                                <span>Kaç Gün</span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="info-item">
                                <h4>@Model.Capacity</h4>
                                <span>Tur Kapasitesi</span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="info-item">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <h4>@Model.TourStartLocationName</h4>
                                        <span>Tur Başlangıç Yeri</span>
                                    </div>
                                    <div class="col-lg-6">
                                        <h4>@Model.Price</h4>
                                        <span>Tur Fiyatı</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="main-button">
                        <a href="reservation.html">Rehberi Gör</a>
                    </div>
                </div>
            
        </div>

    </div>
</div>