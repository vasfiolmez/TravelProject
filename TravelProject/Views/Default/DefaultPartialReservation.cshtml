<div class="call-to-action">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <h2>TUR ROTALARIMIZI GÖZDEN GEÇİRDİN Mİ?</h2>
                <h4>Hızlıca Rezervasyonunu Oluşturalım</h4>
            </div>
            <div class="col-lg-4">
                <div class="border-button">
                    <a type="button" class="border-button" onclick="document.getElementById('reservation-popup').style.display='block'">Rezervasyon Yap</a>
                </div>
            </div>
        </div>
    </div>
</div>


@model TravelProject.Models.Reservation

<div class="col-lg-12">

    <div id="reservation-popup" class="popup-overlay">
        <div class="popup-content">
            <button class="close-popup" onclick="document.getElementById('reservation-popup').style.display='none'">&times;</button>
            <h4>Hemen <em> Yerinizi</em> Ayırtın <em></em></h4>

            <form id="reservation-form" name="gs" method="post" role="search">
                <div class="row">
                    <div class="col-lg-6">
                        <fieldset>
                            <label for="Name" class="form-label">Adınız Soyadınız</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "Name", @placeholder = "Adınız Soyadınız", @required = "required" })

                        </fieldset>
                    </div>
                    <div class="col-lg-6">
                        <fieldset>
                            <label for="Number" class="form-label">Telefon Numarınız</label>
                            @Html.TextBoxFor(x => x.Phone, new { @class = "Number", @placeholder = "Telefon Numaranız", @required = "required" })
                        </fieldset>
                    </div>
                    <div class="col-lg-6">
                        <fieldset>
                            <label for="chooseGuests" class="form-label">Kişi Sayısı</label>
                            <select name="PersonCount" class="form-select" aria-label="Default select example" id="chooseGuests" onChange="this.form.click()">
                                <option type="checkbox" name="option1" value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </fieldset>
                    </div>
                    <div class="col-lg-6">
                        <fieldset>
                            <label for="Number" class="form-label">Rezervasyon Tarihiniz</label>
                            @Html.TextBoxFor(x => x.ReservationDate, new { @class = "date", @placeholder = "Tarih seçiniz", @required = "required", @type = "date" })
                        </fieldset>
                    </div>
                    <div class="col-lg-6">
                        <fieldset>
                            <label for="chooseDestination" class="form-label">Destinasyonu Seçiniz</label>
                            @Html.DropDownListFor(x => x.DestinationId, (List<SelectListItem>)ViewBag.destinasyon, "ex. Türkiye, İstanbul", new { @class = "form-select border-4", id = "chooseCategory", @required = "required" })
                        </fieldset>
                    </div>
                    <div class="col-lg-6">
                        <fieldset>
                            <label for="Mail" class="form-label">Mail Adresi</label>
                            @Html.TextBoxFor(x => x.Mail, new { @class = "Mail", @placeholder = "Mail Adresiniz", @required = "required" ,@type="mail"})
                        </fieldset>
                    </div>
                    <div class="col-lg-12">
                        <fieldset>
                            <label for="chooseDestination" class="form-label">Mesaj</label>
                            @Html.TextAreaFor(x => x.Description, 5, 0, new { @class = "form-control border-4", @placeholder = "Rezervasyon Notunuz" })
                        </fieldset>
                        <br />
                    </div>
                    <div class="col-lg-12">
                        <fieldset>
                            <button class="main-button">Rezervasyonu Yap</button>
                        </fieldset>
                    </div>
                </div>
            </form>
           

        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@if (TempData["Success"] != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            Swal.fire({
                icon: 'success',
                title: 'Başarılı!',
                text: 'Rezervasyonunuz başarıyla oluşturuldu.',
                confirmButtonText: 'Tamam'
            });
        });
    </script>
}



<style>
    .popup-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 999;
    }

    .popup-content {
        position: relative;
        top: 10%;
        margin: auto;
        width: 50%;
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    }

        .popup-content h4 {
            font-size: 30px;
            text-align: center;
            margin-bottom: 50px;
        }

            .popup-content h4 em {
                font-style: normal;
                color: #22b3c1;
            }

        .popup-content .form-label {
            font-size: 15px;
            color: #afafaf;
        }

        .popup-content input,
        .popup-content select {
            width: 100%;
            height: 46px;
            background-color: transparent;
            border-radius: 23px;
            border: 1px solid #e0e0e0;
            padding: 0px 20px;
            cursor: pointer;
            margin-bottom: 30px;
        }

            .popup-content input.date {
                color: #aaa;
            }

        .popup-content button {
            font-size: 14px;
            color: #fff;
            background-color: #22b3c1;
            border: 1px solid #22b3c1;
            padding: 12px 30px;
            width: 100%;
            text-align: center;
            display: inline-block;
            border-radius: 25px;
            font-weight: 500;
            text-transform: capitalize;
            letter-spacing: 0.5px;
            transition: all 0.3s;
            position: relative;
            overflow: hidden;
        }

            .popup-content button:hover {
                opacity: 0.8;
            }
</style>