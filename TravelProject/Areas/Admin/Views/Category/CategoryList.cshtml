@model List<TravelProject.Models.Category>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
    string durum = "";
}


<table class=" table mt-3">
    <thead>

        <tr>
            <th scope="col">#</th>
            <th scope="col">Kategori Adı</th>
            <th scope="col">Durum</th>
            <th scope="col">İşlemler</th>

        </tr>

    </thead>

    <tbody>
        @foreach (var item in Model)
        {

            if (item.CategoryStatus == true)
            {
                durum = "Aktif";
            }
            else
            {
                durum = "Pasif";
            }

            count++;
            <tr>
                <td>@count</td>
                <td>@item.CategoryName</td>
                <td>@durum</td>

             
                <td>
                    @if (item.CategoryStatus == false)
                    {
                        <a href="/Admin/Category/ChangeCategoryStatusToTrue/@item.CategoryId" class="btn btn-outline-info">Aktif yap</a>
                    }
                    else
                    {
                        <a href="/Admin/Category/ChangeCategoryStatusToFalse/@item.CategoryId" class="btn btn-outline-dark">Pasif Yap</a>
                    }

                    
                    <a href="/Admin/Category/UpdateCategory/@item.CategoryId" class="btn btn-success">Güncelle</a>
                </td>
            </tr>
        }

    </tbody>
</table>
<br />
<a href="/Admin/Category/CreateCategory" class="btn btn-primary">Yeni Kategori Girişi</a>
