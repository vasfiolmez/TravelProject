@model TravelProject.Models.City
@{
    ViewBag.Title = "CreateCity";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<form method="post">

    <label>Şehir Adı</label>
    @Html.TextBoxFor(x => x.CityName, new { @class = "form-control" })
    <br />
    <label>Ülkesi</label>
    @Html.DropDownListFor(x => x.CountryId, (List<SelectListItem>)ViewBag.country, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Ekle</button>

</form>

