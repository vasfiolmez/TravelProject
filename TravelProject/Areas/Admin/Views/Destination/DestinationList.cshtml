@model List<TravelProject.Models.Destination>
@{
    ViewBag.Title = "DestinationList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<table class="table mt-3">
    <thead>

        <tr>
            <th scope="col">#</th>
            <th scope="col">Ülke</th>
            <th scope="col">Şehir</th>
            <th scope="col">Gün/Gece</th>
            <th scope="col">Fiyat</th>
            <th scope="col">Görsel</th>


            <th scope="col">İşlemler</th>

        </tr>

    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.City.Country.CountryName</td>
                <td>@item.City.CityName</td>
                <td>@item.DayNight</td>
                <td>@item.Price</td>
                <td><img src="@item.Image" alt="Resim" style="width: 100px; height: auto; border-radius: 8px;" /></td>
                <td>
                    <a href="/Admin/Destination/DeleteDestination/@item.DestinationId" class="btn btn-danger">Sil</a>
                    <a href="/Admin/Destination/UpdateDestination/@item.DestinationId" class="btn btn-success">Güncelle</a>
                    <a href="/About/Index/@item.CityId" class="btn btn-dark">Sitede Gör</a>
                </td>

            </tr>
        }

    </tbody>
</table>
<br />
<a href="/Admin/Destination/CreateDestination/" class="btn btn-primary">Yeni Destinasyon Girişi</a>


